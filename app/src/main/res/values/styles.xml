<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:shadowColor">@color/dark_purple</item>
        <item name="android:shadowDx">20</item>
        <item name="android:shadowDy">30</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/heading_h2</item>
    </style>

    <style name="Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginTop">16dp</item>
<!--        <item name="boxStrokeColor">@color/cs_input</item>-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
<!--        <item name="boxStrokeErrorColor">@color/red_0</item>-->
    </style>

    <style name="DropDownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:inputType">none</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <!--        <item name="boxStrokeErrorColor">@color/red_0</item>-->
    </style>

    <style name="AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">@dimen/heading_h7</item>
    </style>

    <style name="AutoCompleteTextView.DropDownMenu">
        <item name="android:inputType">none</item>
    </style>
</resources>